<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8" />
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="/css/style.css" />
  <link rel="stylesheet" type="text/css" href="/css/grid.css" />
</head>

<body id="podcast_Grid">
   <%- include('header') %>

  <main id="item3" class="podgrid">
    <section id="item3_1">
      <h2>Informationen zum Podcast:</h2>
      <h3>
        <% if (podcast.link) { %>
          <a href="<%= podcast.link %>"><strong><%= podcast.titel %></strong></a>
        <% } else { %>
          <strong><%= podcast.titel %></strong>
        <% } %>
      </h3>
      <ul>
        <li>Beschreibung: <%= podcast.beschreibung %></li>
        <% if (podcast.autor) { %>
          <li>Autor*in: <%= podcast.autor %></li>
        <% } %>
        <% if (podcast.kategorie) { %>
          <li>Kategorie: <%= podcast.kategorie %></li>
        <% } %>
        <% if (podcast.letzteAktualisierung) { %>
          <li>Letztes Update: <time datetime="<%= podcast.letzteAktualisierung %>"><%= new Date(podcast.letzteAktualisierung).toLocaleDateString('de-DE') %></time></li>
        <% } %>
      </ul>
    </section>
    
    <section id="item3_2">
      <img src="<%= podcast.bildUrl %>" alt="<%= podcast.titel %>" />
    </section>
    
    <section id="neusteBereichEpisode">
      <h2>Neueste Episoden</h2>
      <table id="neusteEpisoden">
        <thead>
          <tr>
            <th>Nr.</th>
            <th>Titel</th>
            <th>Datum</th>
          </tr>
        </thead>
        <tbody>
          <% podcast.episoden.forEach((episode, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a href="/episode?pc=<%= pcIndex %>&ep=<%= index %>">
                  <%= episode.titel %>
                </a>
              </td>
              <td><time datetime="<%= episode.datum %>"><%= new Date(episode.datum).toLocaleDateString('de-DE') %></time></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </main>
  
  <%- include('ankuendigungen') %>
  <%- include('footer') %>
</body>
</html>